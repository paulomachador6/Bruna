<!-- Inicio do conteudo do administrativo -->
<div class="wrapper">
    <div class="row">
        <div class="top-list">
            <span class="title-content">Visualizar</span>
            <div class="top-list-right">
                <a href="/users?page=1" class="btn-info">Listar</a>
                <a href="/users/edit/{{user.dataValues.id}}"
                    class="btn-warning">Editar</a>
                <a href="/users/edit-password/{{user.dataValues.id}}"
                    class="btn-warning">Editar Senha</a>
                <a href="/users/edit-image/{{user.dataValues.id}}"
                    class="btn-warning">Editar Imagem</a>
                <a href="/users/delete/{{user.dataValues.id}}"
                    class="btn-danger" onclick="return confirm('Tem certeza que
                    deseja excluir este registro?')">Apagar</a>
            </div>
        </div>
        {{>_msgAdm}}

        <div class="content-adm">
            <div class="view-det-adm">
                <span class="view-adm-title">Imagem: </span>
                <span class="view-adm-info">
                    {{#if user.dataValues.image }}
                    <img src="/images/users/{{user.dataValues.image}}"
                        class="view-image-user">
                    {{else}}
                    <img src="/images/users/user.jpg" class="view-image-user">
                    {{/if}}

                </span>
            </div>
            <div class="view-det-adm">
                <span class="view-adm-title">ID: </span>
                <span class="view-adm-info">{{user.dataValues.id}}</span>
            </div>
            <div class="view-det-adm">
                <span class="view-adm-title">Nome: </span>
                <span class="view-adm-info">{{user.dataValues.nome}}</span>
            </div>
            <div class="view-det-adm">
                <span class="view-adm-title">E-mail: </span>
                <span class="view-adm-info">{{user.dataValues.email}}</span>
            </div>
            <div class="view-det-adm">
                <span class="view-adm-title">Situação: </span>
                <span class="view-adm-info">
                    <a
                        href="/situations/view/{{user.dataValues.situationId}}">
                        {{user.situation.dataValues.nomeSituacao}}
                    </a>
                </span>
            </div>
            <div class="view-det-adm">
                <span class="view-adm-title">Cadastrado: </span>
                <span class="view-adm-info">
                    {{#formatDate user.dataValues.createdAt}}{{/formatDate}}
                </span>
            </div>
            <div class="view-det-adm">
                <span class="view-adm-title">Editado: </span>
                <span class="view-adm-info">{{#fotmatDateTime
                    user.dataValues.updatedAt}}{{/fotmatDateTime}}</span>
            </div>
        </div>
    </div>
</div>

<!-- Fim do conteudo do administrativo -->