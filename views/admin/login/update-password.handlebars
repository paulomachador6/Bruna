<div class="container-login">
    <div class="wrapper-login">
        <div class="title">
            <span>Atualizar Senha</span>
        </div>
        <!-- Imprimir as mensagens que estão na sessão -->
        {{>_msg}}
        <form class="form-login" action="/recover-password/update-password" method="post">

            <input type="hidden" name="id" id="id" value="{{data.id}}">
            <input type="hidden" name="key" id="key" value="{{data.key}}">

            <div class="row">
                <i class="fa-solid fa-lock"></i>
                <input type="password" name="password" id="password" placeholder="Informe uma senha" >
            </div>
            <div class="row button">
                <input type="submit" value="Salvar">
            </div>

            <div class="signup-link">
                <a href="/login">Clique aqui </a> para acessar
            </div>
        </form>
    </div>
</div>