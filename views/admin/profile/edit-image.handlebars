<!-- Inicio do conteudo do administrativo -->
<div class="wrapper">
    <div class="row">
        <div class="top-list">
            <span class="title-content">Editar Foto</span>
            <div class="top-list-right">
                <a href="/profile" class="btn-primary">Perfil</a>
            </div>
        </div>

        <!-- Imprimir as mensagens que estão na sessão -->
        {{>_msgAdm}}

        <div class="content-adm">
            <!-- Formulário para Editar imagem do usuário -->
            <form class="form-adm" action="/profile/edit-image" method="post"
                enctype="multipart/form-data">

                <div class="row-input">
                    <div class="column">
                        <label class="title-input">Image(500x500):<span
                                class="text-danger">*</span></label>
                        <input type="file" name="image" id="image"
                            class="input-adm" onchange="inputFilePreviewImg()">
                    </div>
                    <div class="column">
                        {{#if data.imageOld}}
                        <span id="preview-img">
                            <img src="/images/users/{{data.imageOld}}"
                                alt="Imagem" class="view-image-user">
                        </span>
                        {{else}}
                        <span id="preview-img">
                            <img src="/images/users/user.jpg" alt="Imagem"
                                class="view-image-user">
                        </span>
                        {{/if}}
                    </div>
                </div>

                <p class="text-danger mb-5 fs-4">* Campo Obrigatório</p>

                <input type="submit" class="btn-warning" value="Editar">
            </form>
        </div>
    </div>
</div>
<!-- Fim do conteudo do administrativo -->